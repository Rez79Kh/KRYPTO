<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.krypto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_cryptocurrency"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_cryptocurrency"
        android:supportsRtl="true"
        android:theme="@style/Theme.Krypto">
        <activity android:name="com.example.krypto.Activities.RemoveActivity"/>
        <activity android:name="com.example.krypto.Activities.CurrencyDetailActivity" />
        <activity android:name="com.example.krypto.Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.krypto.Activities.MainActivity" />
    </application>

</manifest>